pipeline {
    agent any
    
    stages {
        stage('Build') {
            steps {
                sh 'mvn clean install'
            }
        }
        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }
        stage('Deploy') {
            steps {
                sh 'mvn deploy'
            }
        }
    }
    
    post {
        always {
            echo 'Pipeline terminé.'
        }
        success {
            echo 'Pipeline réussi. Félicitations !'
            script {
                if (env.BRANCH_NAME == 'B2B') {
                    echo 'Tests exécutés avec succès sur la branche B2B.'
                    currentBuild.result = 'SUCCESS'
                } else {
                    echo 'Tests exécutés avec succès sur une autre branche.'
                }
            }
        }
        failure {
            echo 'Pipeline échoué. Veuillez vérifier les logs pour plus de détails.'
            script {
                if (env.BRANCH_NAME == 'B2B') {
                    echo 'Échec des tests sur la branche B2B.'
                    currentBuild.result = 'FAILURE'
                } else {
                    echo 'Échec des tests sur une autre branche.'
                }
            }
        }
    }
}
