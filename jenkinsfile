pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                 checkout([$class: 'GitSCM', branches: [[name: '*/B2B']], credentialsId: '8c36c64d-43f3-43ec-832d-50ceb7836e55', userRemoteConfigs: [[url: 'https://github.com/zgolliaya/PFE.git']]])
            }
        }
        
        
        stage('Run Tests') {
            steps {
                sh ' python -m robot  D:/PFE/test1/APItest.robot'
                
            }
        }
    }
    
    post {
        success {
            emailext body: 'Le pipeline a réussi !', subject: 'Pipeline réussi', to: 'zgolliaya2000@gmail.com'
        }
        
        failure {
            emailext body: 'Le pipeline a échoué !', subject: 'Pipeline échoué', to: 'zgolliaya2000@gmail.com'
        }
        
        unstable {
            emailext body: 'Le pipeline est instable !', subject: 'Pipeline instable', to: 'zgolliaya2000@gmail.com'
        }
    }
}
