pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                // Checkout the code from the B2B branch
                checkout([$class: 'GitSCM', branches: [[name: '*/B2B']], userRemoteConfigs: [[url: 'https://github.com/zgolliaya/PFE.git']]])
            }
        }
        
        stage('Build') {
            steps {
                // Build your project here
                sh 'mvn clean install'
            }
        }
        
        stage('Run Tests') {
            steps {
                // Run your tests here
                sh 'mvn test'
            }
            
            post {
                always {
                    // Publish JUnit test results
                    junit '**/target/surefire-reports/*.xml'
                }
            }
        }
    }
}
