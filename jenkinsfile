pipeline {
    agent any
    
    stages {
        stage('Build') {
            steps {
                sh 'mvn clean install'
            }
        }
        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }
        stage('Deploy') {
            steps {
                sh 'mvn deploy'
            }
        }
    }
    
    post {
        always {
            echo 'Pipeline terminé.'
        }
        success {
            echo 'Pipeline réussi. Félicitations !'
            script {
                if (env.BRANCH_NAME == 'B2B') {
                    echo 'Tests exécutés avec succès sur la branche B2B.'
                    currentBuild.result = 'SUCCESS'
                    // Faire la fusion (merge) si les tests réussissent sur la branche B2B
                    sh 'git checkout master'
                    sh 'git merge B2B'
                    sh 'git push origin master'
                }
            }
        }
        failure {
            echo 'Pipeline échoué. Veuillez vérifier les logs pour plus de détails.'
        }
    }
}
