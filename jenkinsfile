pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                // Checkout the code from the B2B branch
                checkout([$class: 'GitSCM', branches: [[name: '*/B2B']], userRemoteConfigs: [[url: 'https://github.com/zgolliaya/PFE.git']]])
            }
        }
        
        stage('Run Robot Framework Tests') {
            steps {
                // Install Robot Framework and required libraries
                sh 'pip install robotframework'
                sh 'pip install robotframework-seleniumlibrary' // Example library, install necessary libraries as per your test requirements
                
                // Run Robot Framework tests
                sh 'robot ./test1/APItest.robot'
            }
            
            post {
                always {
                    // Publish Robot Framework test results
                    robot './test1/APItest.robot/output.xml'
                }
            }
        }
    }
}
